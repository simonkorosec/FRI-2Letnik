<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emp.addressbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddressBook"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewContact"
            android:label="@string/title_activity_view_contact"
            android:parentActivityName=".AddressBook">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="emp.addressbook.AddressBook" />
        </activity>
        <activity
            android:name=".AddEditContact"
            android:label="@string/title_activity_add_edit_contact"></activity>
    </application>

</manifest>
